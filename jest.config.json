{
  "roots": ["<rootDir>/test"],
  "clearMocks": true,
  "collectCoverageFrom": ["<rootDir>/src/**/*.ts", "!<rootDir>/src/**/interfaces/**/*.ts"],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageProvider": "v8",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "function": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "transform": {
    ".+\\.ts$": "ts-jest"
  },
  "setupFiles": [
    "dotenv/config"
  ]
}
